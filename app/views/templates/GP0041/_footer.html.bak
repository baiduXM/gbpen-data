<div class="footer">
    <div class="xnav">
        <div class="xtop" id="xtop"><a href="javascript:;"><img src="{$site_url}images/top.png"></a></div>
        <ul>
            {$litmit = 8}
                {if $navs|count lt $litmit}{$litmit = $navs|count}{/if}
                    <li class="nLi" style="width:{100/($litmit+1)-1}%">
                        <h3><a href="{$site_url}">首页</a></h3>
                    </li>
                {foreach name=navs item=nav from=$navs}
                    <li  class="fl {if $nav.current}current{/if} nLi" style="width:{100/($litmit+1)}%">
                        <h3><a href="{$nav.link}">{$nav.name}</a></h3>
                    </li>
                    {if $nav@index+1 gte $litmit}{break}{/if}
                {/foreach}
        </ul>
        <i></i>
    </div>
    <div class="public copy">{$footprint} </div>
</div>
{$footscript}